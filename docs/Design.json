{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "meta": {
    "brand": "Rayavriti",
    "style": "dark-tech-futuristic",
    "mood": ["bold", "confident", "high-contrast", "modern", "future-ready"],
    "usage": ["web", "mobile", "dashboard", "marketing", "landing-pages"]
  },

  "colors": {
    "brand": {
      "primary": {
        "value": "#d9fd3a",
        "description": "Electric green representing energy, speed, innovation"
      },
      "secondary": {
        "value": "#11110B",
        "description": "Deep black representing strength, stability, trust"
      }
    },

    "background": {
      "default": { "value": "#11110B" },
      "surface": { "value": "#161612" },
      "elevated": { "value": "#1C1C16" }
    },

    "text": {
      "primary": { "value": "#d9fd3a" },
      "secondary": { "value": "#A6B300" },
      "muted": { "value": "#6F6F5A" },
      "inverse": { "value": "#11110B" }
    },

    "state": {
      "success": { "value": "#d9fd3a" },
      "warning": { "value": "#E6E600" },
      "error": { "value": "#FF4D4D" },
      "info": { "value": "#7AFF00" }
    },

    "border": {
      "default": { "value": "#2A2A22" },
      "active": { "value": "#d9fd3a" },
      "subtle": { "value": "#1F1F18" }
    }
  },

  "typography": {
    "fontFamilies": {
      "heading": {
        "value": "League Spartan, system-ui, sans-serif"
      },
      "body": {
        "value": "Space Grotesk, system-ui, sans-serif"
      },
      "mono": {
        "value": "JetBrains Mono, monospace"
      }
    },

    "scale": {
      "h1": { "size": "64px", "weight": 700, "lineHeight": 1.1 },
      "h2": { "size": "48px", "weight": 700, "lineHeight": 1.15 },
      "h3": { "size": "36px", "weight": 600, "lineHeight": 1.2 },
      "h4": { "size": "28px", "weight": 600, "lineHeight": 1.25 },
      "h5": { "size": "22px", "weight": 600, "lineHeight": 1.3 },
      "body": { "size": "16px", "weight": 400, "lineHeight": 1.6 },
      "small": { "size": "14px", "weight": 400, "lineHeight": 1.5 }
    },

    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0em",
      "wide": "0.08em"
    },

    "textTransform": {
      "headings": "uppercase",
      "labels": "uppercase"
    }
  },

  "spacing": {
    "unit": "8px",
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px"
    }
  },

  "radius": {
    "none": "0px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "20px",
    "pill": "999px"
  },

  "shadows": {
    "none": "none",
    "soft": "0 8px 24px rgba(0, 0, 0, 0.4)",
    "hard": "0 12px 40px rgba(0, 0, 0, 0.6)",
    "glow": "0 0 24px rgba(211, 249, 4, 0.35)"
  },

  "components": {
    "button": {
      "primary": {
        "background": "#d9fd3a",
        "text": "#11110B",
        "hover": {
          "background": "#C3E800",
          "shadow": "glow"
        },
        "active": {
          "background": "#B2D700"
        }
      },
      "secondary": {
        "background": "transparent",
        "text": "#d9fd3a",
        "border": "#d9fd3a",
        "hover": {
          "background": "rgba(211, 249, 4, 0.1)"
        }
      }
    },

    "card": {
      "background": "#161612",
      "border": "#2A2A22",
      "hover": {
        "border": "#d9fd3a",
        "shadow": "soft"
      }
    },

    "input": {
      "background": "#11110B",
      "border": "#2A2A22",
      "text": "#d9fd3a",
      "focus": {
        "border": "#d9fd3a",
        "shadow": "glow"
      }
    }
  },

  "motion": {
    "duration": {
      "fast": "120ms",
      "normal": "220ms",
      "slow": "400ms"
    },
    "easing": {
      "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
      "emphasized": "cubic-bezier(0.2, 0, 0, 1)"
    }
  },

  "layout": {
    "maxWidth": "1200px",
    "grid": {
      "columns": 12,
      "gutter": "24px"
    }
  },

  "iconography": {
    "style": "geometric",
    "stroke": "2px",
    "corner": "sharp",
    "fill": "solid"
  },

  "doNot": [
    "Do not use gradients",
    "Do not use pastel colors",
    "Do not use rounded playful fonts",
    "Do not use drop shadows without purpose",
    "Do not dilute contrast"
  ]
}
